		<form method="post"
		      id="nmicheckout" 
			  class="rowlike enableUnloadProtection"
		      tal:attributes="action view/action_url"
			  tal:define="key_id view/key_id;
			              redirect view/ipn_url;
			              hash view/hash;
						  amount view/amount;
						  orderid hash/orderid;">
		    <input type="hidden" name="analyticsdata" value="" />
		
			<input type="hidden" name="type" value="sale" />
		    <input type="hidden" name="amount" value=""
